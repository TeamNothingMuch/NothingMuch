<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Blueprint.Default.MaterialYou" parent="Frames.Default.MaterialYou">
        <item name="bottomNavigationStyle">
            @style/Widget.Blueprint.BottomNavigationView.MaterialYou
        </item>
        <item name="navigationViewStyle">@style/Widget.Blueprint.NavigationView.MaterialYou</item>
    </style>

    <style name="Blueprint.Default.Amoled.MaterialYou" parent="Frames.Default.Amoled.MaterialYou">
        <item name="bottomNavigationStyle">
            @style/Widget.Blueprint.BottomNavigationView.MaterialYou
        </item>
        <item name="navigationViewStyle">@style/Widget.Blueprint.NavigationView.Amoled.MaterialYou
        </item>
    </style>

    <style name="Widget.Blueprint.BottomNavigationView.MaterialYou" parent="Widget.Frames.BottomNavigationView.MaterialYou">
        <item name="itemIconTint">@drawable/bottom_navigation_states</item>
        <item name="itemTextColor">@drawable/bottom_navigation_states</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="Widget.Blueprint.NavigationView.MaterialYou" parent="Widget.Frames.NavigationView.MaterialYou">
        <item name="itemTextColor">@color/navigation_item_text_color</item>
        <item name="itemIconTint">@color/navigation_item_text_color</item>
        <item name="itemShapeFillColor">@color/navigation_item_bg_color</item>
        <item name="android:background">?colorSurface</item>
    </style>

    <style name="Widget.Blueprint.NavigationView.Amoled.MaterialYou" parent="Widget.Blueprint.NavigationView.MaterialYou" />

    <style name="Widget.Blueprint.RequestCard.MaterialYou" parent="Widget.Material3.CardView.Filled">
        <item name="shapeAppearance">@style/ShapeAppearance.Frames.CardView</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">0dp</item>
        <item name="cardBackgroundColor">@color/checkable_card_background</item>
        <item name="cardForegroundColor">@color/checkable_card_foreground</item>
        <item name="strokeWidth">0dp</item>
        <item name="checkedIcon">@null</item>
        <item name="checkedIconEnabled">false</item>
        <item name="rippleColor">@color/checkable_card_ripple</item>
        <item name="android:clickable">true</item>
        <item name="android:checkable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Widget.Blueprint.OutlinedButton.MaterialYou" parent="Widget.Material3.Button.OutlinedButton">
        <item name="backgroundTint">@color/outline_btn_bg_color</item>
        <item name="rippleColor">@color/outline_btn_ripple_color</item>
        <item name="iconPadding">8dp</item>
        <item name="iconTint">?colorSecondary</item>
        <item name="strokeColor">?colorSecondary</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColor">?colorSecondary</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
